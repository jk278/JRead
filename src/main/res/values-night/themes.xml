<resources>
    <!-- Base application theme. -->
    <style name="Theme.阅1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/first_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/first_accent</item>
        <item name="colorOnSecondary">@color/dark_level</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!--  Customize your theme here.  -->
        <item name="colorSurface">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- 设置导航栏颜色 -->
        <item name="android:navigationBarColor">?android:windowBackground</item>
        <!-- 设置 menu 字体色 -->
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">19sp</item>
        <!-- "android:colorEdgeEffect" -->
        <item name="android:colorEdgeEffect">?android:windowBackground</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
    </style>

