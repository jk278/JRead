<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.JRead.ui.EditorFragment">

    <com.JRead.NoScrollFocusScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_editor">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="?actionBarSize">

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/title"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="20sp"
                android:background="@null"
                android:layout_marginTop="@dimen/missing_bottom_toolbar"
                android:layout_marginBottom="35dp"
                android:importantForAutofill="no"
                android:textColor="?android:textColor"/>

            <!-- 注意之后的焦点问题 -->
            <EditText
                android:id="@+id/edit_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:background="@null"
                android:importantForAutofill="no"
                android:textColor="?android:textColor"/>

            <ImageView
                android:id="@+id/block_null"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@null"
                tools:ignore="ContentDescription" />
            </androidx.appcompat.widget.LinearLayoutCompat>
    </com.JRead.NoScrollFocusScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>